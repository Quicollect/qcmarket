
<% if !debt.is_active_placement? %>
	<%= link_to new_debt_debt_placement_path( 
				debt_id: debt.id, debts_debt_placement: 
				{agency_id: agency.id } ), 
					:method=> :get,
				class: "btn-primary btn-action glyphicons pushpin no-spinner",
				title: "Assign",
				:'data-toggle'=> "modal" do %>
			<i></i>
	<% end %>
<% end %>

<% if item.nil? %>
	<%= link_to debt_debt_shoppinglist_items_path( 
				debt_id: debt.id, debts_debt_shoppinglist_item: 
				{agency_id: agency.id } ), 
					:method=> :get,
				title: "Add to consideration list",
				class: "btn-primary btn-action glyphicons shopping_cart ajax-reload no-spinner" do %>
			<i></i>
	<% end %>
<% else %>
    <%= link_to debt_debt_shoppinglist_item_path( debt_id: debt.id, id: item.id ),
        :method=> :delete,
        title: "remove from consideration list",
        class: "btn-primary btn-action glyphicons remove_2 ajax-reload no-spinner" do %>
    <i></i>
    <% end %>
<% end %>