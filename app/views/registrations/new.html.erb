<% provide(:title, 'Sign Up') %>

<div class="row-fluid">
  <div class="span6 offset3">
    <%= simple_form_for(resource, 
                    as: resource_name, 
                    url: registration_path(resource_name), 
                    html: {class: "form-horizontal well"}) do |f| %>
      
      <%= render 'shared/error_messages', object: f.object%>

      <div class="control-group">
        <h2 class="center">Sign up</h2>
      </div>

      <%= f.input :name %>
      <%= f.input :email %>

      <div class="control-group">
        <%= f.label 'Who are you?', class: 'control-label' %>
        <div class="controls">
          <%= f.select :roles, 
              Account.account_types,
              {}, {class: "selectpicker span9"} %>
        </div>
      </div>

      <%= f.input :password %>
      <%= f.input :password_confirmation %>


      <% if Rails.application.config.captcha %>
        <div class="control-group">
          <div class="controls">
              <div class='span9'>
                <%= recaptcha_tags %>
              </div>
          </div>
        </div>
      <% end %>

      <div class="control-group">
        <div class="controls buttons-row">
          <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
            Sign up <i class="icon-ok icon-white"></i>
          <% end %>
        </div>
      </div>

    <div class="control-group">
        <div class="controls">
          <%= render :partial => "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


