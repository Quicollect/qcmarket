<% provide(:title, 'Sign In') %>

<div id="login">
  <div class="container">
    <div class="wrapper">
      <h1 class="center">Quicollect<i></i></h1>
      <div class="separator bottom"></div>

      <div class="widget widget-heading-simple widget-body-gray">
        <div class="widget-body">
          <%= simple_form_for(resource,
                      as: resource_name,  
                      url: user_session_path, 
                      html: {class: "form-vertical well"}) do |f| %>
          
          <%= render 'shared/error_messages', object: f.object%>
          
          
          <%= content_for(:email) do %>
            <strong>Email</strong> <%=link_to 'Not confirmed?', new_confirmation_path(resource_name), class: 'pull-right no-spinner'%>
          <% end %>

          <%= f.input :email, input_html: {class: "input-block-level"},
            label: content_for(:email) %>

          <%= content_for(:password) do %>
            <strong>Password</strong> <%=link_to 'Forgot your password?', new_password_path(resource_name), class: 'pull-right no-spinner'%>
          <% end %>

          <%= f.input :password, input_html: {class: "input-block-level"}, 
                label: content_for(:password) %>

          <div class="control-group">
            <div class="controls buttons-row">
              <%= button_tag(type: 'submit', class: "btn btn-success btn-block") do %>
                Sign In <i class="icon-ok icon-white"></i>
              <% end %>
            </div>
          </div>

          <div class="separator bottom"></div>

          <% if devise_mapping.registerable? && controller_name != 'registrations' %>
            <div class="control-group">
              <div class="controls">
                <%= link_to sign_up_path, class: "btn btn-icon-stacked btn-block btn-primary glyphicons user_add no-spinner" do%>
                  <i></i><span>Don't have an account?</span><span class="strong">Sign up</span></a>   
                <%end%>
              </div>
            </div>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


   





