<% provide(:title, 'Change your password') %>

<div class="row-fluid">
  <div class="span6 offset3">
    <%= form_for(resource,
                  as: resource_name,  
                  url: password_path(resource_name), 
                  html: {class: "form-horizontal well", :method => :put}) do |f| %>

      <%= render 'shared/error_messages', object: f.object%>
	    <%= f.hidden_field :reset_password_token %>
	  
      <div class="control-group">
        <h2 class="center">Change your password</h2>
      </div>
      
      <div class="control-group">
        <%= f.label :password, "New Password", class: 'control-label' %>
        <div class="controls">
          <%= f.password_field :password, class: 'span9' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password_confirmation, "Confirm New Password", class: 'control-label' %>
        <div class="controls">
          <%= f.password_field :password_confirmation, class: 'span9' %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls buttons-row">
          <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
            Change Password <i class="icon-ok icon-white"></i>
          <% end %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= render :partial => "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
   





